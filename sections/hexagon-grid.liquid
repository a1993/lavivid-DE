{{ 'section-hexagon-grid.css' | asset_url | stylesheet_tag }}

<div class="hexagon-grid-section section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
      </div>
    {% endif %}

    {% assign items_count = section.blocks.size %}
    {% assign desktop_columns = section.settings.columns_desktop %}
    {% assign needs_alignment = false %}
    {% if items_count < desktop_columns %}
      {% assign needs_alignment = true %}
    {% endif %}
    
    <div class="hexagon-grid-wrapper hexagon-grid-wrapper--{{ section.settings.grid_alignment }}">
      <div 
        class="hexagon-grid {% if needs_alignment %}hexagon-grid--align-mode{% endif %}" 
        style="--grid-columns-mobile: {{ section.settings.columns_mobile }}; --grid-columns-desktop: {{ section.settings.columns_desktop }}; --grid-gap: {{ section.settings.grid_gap }}px; --max-width: {{ section.settings.max_width }}px; --items-count: {{ items_count }};"
      >
        {% for block in section.blocks %}
          <div class="hexagon-item" {{ block.shopify_attributes }}>
            <div class="hexagon-wrapper">
              <div 
                class="hexagon-card"
                style="
                  --bg-color: {{ block.settings.background_color }};
                  --text-color: {{ block.settings.text_color }};
                  --hover-bg-color: {{ block.settings.hover_background_color }};
                  --hover-text-color: {{ block.settings.hover_text_color }};
                  --title-color: {{ block.settings.title_color }};
                  background: {{ block.settings.background_color }};
                  color: {{ block.settings.text_color }};
                  padding-top: {{ block.settings.padding_top }}px;
                  padding-bottom: {{ block.settings.padding_bottom }}px;
                "
              >
                <h3 class="hexagon-title" style="color: {{ block.settings.title_color }};">{{ block.settings.title }}</h3>
                <p class="hexagon-description">{{ block.settings.description }}</p>
              </div>
              
              {% if block.settings.icon != blank %}
                <div 
                  class="hexagon-icon-wrapper"
                  style="background: {{ block.settings.icon_background }};"
                >
                  <img
                    src="{{ block.settings.icon | image_url: width: 136 }}"
                    alt="{{ block.settings.title }}"
                    width="{{ block.settings.icon_width }}"
                    height="{{ block.settings.icon_height }}"
                    loading="lazy"
                    class="hexagon-icon"
                  >
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

