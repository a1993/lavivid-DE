{% doc %}
  @prompt
    生成一个立即联系我们的居中cta，英文，带边框占屏幕三分之一宽度
    Need Immediate Assistance?
    If you have questions regarding an order, please contact us directly.
    
    support@lavividhair.com, email加外边框，前面放email icon形成类似按钮的样子
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-cta-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
  }

  .ai-contact-cta__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.desktop_width_percent }}%;
    margin: 0 auto;
    padding: {{ block.settings.padding }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    background-color: {{ block.settings.background_color }};
    text-align: center;
  }

  .ai-contact-cta__heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    color: {{ block.settings.heading_color }};
    line-height: 1.3;
  }

  .ai-contact-cta__text-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
  }

  .ai-contact-cta__email-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    margin: 0;
    padding: {{ block.settings.email_padding_vertical }}px {{ block.settings.email_padding_horizontal }}px;
    font-size: {{ block.settings.email_size }}px;
    font-weight: {{ block.settings.email_weight }};
    color: {{ block.settings.email_color }};
    background-color: {{ block.settings.email_bg_color }};
    border: {{ block.settings.email_border_width }}px solid {{ block.settings.email_border_color }};
    border-radius: {{ block.settings.email_border_radius }}px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .ai-contact-cta__email-{{ ai_gen_id }}:hover {
    color: {{ block.settings.email_hover_color }};
    background-color: {{ block.settings.email_hover_bg_color }};
    border-color: {{ block.settings.email_hover_border_color }};
  }

  .ai-contact-cta__email-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-contact-cta__container-{{ ai_gen_id }} {
      max-width: 90%;
    }

    .ai-contact-cta__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }

    .ai-contact-cta__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-contact-cta__email-{{ ai_gen_id }} {
      font-size: {{ block.settings.email_size | times: 0.9 }}px;
    }

    .ai-contact-cta__email-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.9 }}px;
      height: {{ block.settings.icon_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-contact-cta-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-contact-cta__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-contact-cta__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-contact-cta__text-{{ ai_gen_id }}">
        {{ block.settings.description }}
      </div>
    {% endif %}

    {% if block.settings.email != blank %}
      <a 
        href="mailto:{{ block.settings.email }}" 
        class="ai-contact-cta__email-{{ ai_gen_id }}"
      >
        <svg 
          class="ai-contact-cta__email-icon-{{ ai_gen_id }}"
          xmlns="http://www.w3.org/2000/svg" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="2" 
          stroke-linecap="round" 
          stroke-linejoin="round"
        >
          <rect x="2" y="4" width="20" height="16" rx="2"></rect>
          <path d="m2 7 10 7 10-7"></path>
        </svg>
        <span>{{ block.settings.email }}</span>
      </a>
    {% endif %}
  </div>
</div>

