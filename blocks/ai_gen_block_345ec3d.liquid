  @prompt
    我要在password页面生成这pc/m端的着陆页内容
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-password-landing-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    min-height: 100vh;
    background-color: {{ block.settings.background_color }};
    position: relative;
    overflow: hidden;
  }

  .ai-password-landing__bg-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: {{ block.settings.background_opacity | divided_by: 100.0 }};
  }

  .ai-password-landing__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-password-landing__container-{{ ai_gen_id }} {
    position: relative;
    z-index: 1;
    max-width: {{ block.settings.content_max_width }}px;
    margin: 0 auto;
    padding: 60px 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    text-align: center;
  }

  .ai-password-landing__logo-{{ ai_gen_id }} {
    margin-bottom: 40px;
    max-width: {{ block.settings.logo_width }}px;
    width: 100%;
  }

  .ai-password-landing__logo-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-password-landing__logo-placeholder-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-password-landing__logo-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: auto;
    max-height: 120px;
    opacity: 0.3;
  }

  .ai-password-landing__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 20px;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-password-landing__subheading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 40px;
    line-height: 1.6;
    max-width: 600px;
  }

  .ai-password-landing__form-wrapper-{{ ai_gen_id }} {
    width: 100%;
    max-width: 500px;
    margin-bottom: 40px;
  }

  .ai-password-landing__form-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-password-landing__input-{{ ai_gen_id }} {
    width: 100%;
    padding: 16px 20px;
    border: 2px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_bg_color }};
    color: {{ block.settings.text_color }};
    font-size: 16px;
    transition: border-color 0.3s ease;
  }

  .ai-password-landing__input-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.input_focus_color }};
  }

  .ai-password-landing__button-{{ ai_gen_id }} {
    width: 100%;
    padding: 16px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ai-password-landing__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    transform: translateY(-2px);
  }

  .ai-password-landing__error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
    font-size: 14px;
    margin-top: 8px;
    text-align: center;
  }

  .ai-password-landing__social-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
  }

  .ai-password-landing__social-link-{{ ai_gen_id }} {
    color: {{ block.settings.social_icon_color }};
    transition: color 0.3s ease, transform 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-password-landing__social-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.social_icon_hover_color }};
    transform: translateY(-2px);
  }

  .ai-password-landing__social-link-{{ ai_gen_id }} svg {
    width: {{ block.settings.social_icon_size }}px;
    height: {{ block.settings.social_icon_size }}px;
  }

  .ai-password-landing__footer-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: 14px;
    margin-top: 40px;
    opacity: 0.8;
  }

  @media screen and (max-width: 749px) {
    .ai-password-landing__container-{{ ai_gen_id }} {
      padding: 40px 20px;
    }

    .ai-password-landing__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-password-landing__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }

    .ai-password-landing__logo-{{ ai_gen_id }} {
      max-width: {{ block.settings.logo_width | times: 0.8 }}px;
    }

    .ai-password-landing__social-{{ ai_gen_id }} {
      gap: 16px;
    }

    .ai-password-landing__social-link-{{ ai_gen_id }} svg {
      width: {{ block.settings.social_icon_size | times: 0.9 }}px;
      height: {{ block.settings.social_icon_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<ai-password-landing-{{ ai_gen_id }} class="ai-password-landing-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.background_image %}
    <img
      src="{{ block.settings.background_image | image_url: width: 2000 }}"
      alt="{{ block.settings.background_image.alt | escape }}"
      class="ai-password-landing__bg-image-{{ ai_gen_id }}"
      loading="eager"
    >
  {% endif %}

  <div class="ai-password-landing__overlay-{{ ai_gen_id }}"></div>

  <div class="ai-password-landing__container-{{ ai_gen_id }}">
    {% if block.settings.logo %}
      <div class="ai-password-landing__logo-{{ ai_gen_id }}">
        <img
          src="{{ block.settings.logo | image_url: width: 600 }}"
          alt="{{ shop.name }}"
          loading="eager"
        >
      </div>
    {% else %}
      <div class="ai-password-landing__logo-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}

    {% if block.settings.heading != blank %}
      <h1 class="ai-password-landing__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-password-landing__subheading-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </div>
    {% endif %}

    <div class="ai-password-landing__form-wrapper-{{ ai_gen_id }}">
      {% form 'storefront_password' %}
        <div class="ai-password-landing__form-{{ ai_gen_id }}">
          <input
            type="password"
            name="password"
            class="ai-password-landing__input-{{ ai_gen_id }}"
            placeholder="{{ block.settings.input_placeholder }}"
            autocomplete="current-password"
            aria-label="Password"
            required
          >
          
          <button
            type="submit"
            class="ai-password-landing__button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text }}
          </button>

          {% if form.errors %}
            <div class="ai-password-landing__error-{{ ai_gen_id }}">
              {{ form.errors.messages.password }}
            </div>
          {% endif %}
        </div>
      {% endform %}
    </div>

    {% if block.settings.show_social_links %}
      <div class="ai-password-landing__social-{{ ai_gen_id }}">
        {% if block.settings.facebook_url != blank %}
          <a
            href="{{ block.settings.facebook_url }}"
            class="ai-password-landing__social-link-{{ ai_gen_id }}"
            target="_blank"
            rel="noopener"
            aria-label="Facebook"
          >
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
            </svg>
          </a>
        {% endif %}

        {% if block.settings.instagram_url != blank %}
          <a
            href="{{ block.settings.instagram_url }}"
            class="ai-password-landing__social-link-{{ ai_gen_id }}"
            target="_blank"
            rel="noopener"
            aria-label="Instagram"
          >
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </a>
        {% endif %}

        {% if block.settings.tiktok_url != blank %}
          <a
            href="{{ block.settings.tiktok_url }}"
            class="ai-password-landing__social-link-{{ ai_gen_id }}"
            target="_blank"
            rel="noopener"
            aria-label="TikTok"
          >
            <svg viewBox="0 0 24 24" fill="currentColor">
              <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
            </svg>
          </a>
        {% endif %}

        {% if block.settings.youtube_url != blank %}
          <a
            href="{{ block.settings.youtube_url }}"
            class="ai-password-landing__social-link-{{ ai_gen_id }}"
            target="_blank"
            rel="noopener"
            aria-label="YouTube"
          >
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"></path>
              <polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"></polygon>
            </svg>
          </a>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.footer_text != blank %}
      <div class="ai-password-landing__footer-text-{{ ai_gen_id }}">
        {{ block.settings.footer_text }}
      </div>
    {% endif %}
  </div>
</ai-password-landing-{{ ai_gen_id }}>

<script>
  (function() {
    class AiPasswordLanding{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupPasswordForm();
      }

      setupPasswordForm() {
        const form = this.querySelector('form');
        const input = this.querySelector('.ai-password-landing__input-{{ ai_gen_id }}');
        
        if (form && input) {
          input.focus();
        }
      }
    }

    customElements.define('ai-password-landing-{{ ai_gen_id }}', AiPasswordLanding{{ ai_gen_id }});
  })();
</script>

