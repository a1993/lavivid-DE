<script>
  (function() {
    class LifestyleRecommender{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.cards = this.querySelectorAll('.ai-lifestyle-card-{{ ai_gen_id }}');
        this.productSections = this.querySelectorAll('.ai-lifestyle-products-{{ ai_gen_id }}');
        this.setupEventListeners();
        
        if (this.cards.length > 0) {
          this.cards[0].click();
        }
      }

      setupEventListeners() {
        this.cards.forEach((card) => {
          card.addEventListener('click', () => {
            const lifestyleId = card.getAttribute('data-lifestyle');
            this.showProducts(lifestyleId);
            this.setActiveCard(card);
            this.scrollToProducts();
          });
        });
      }

      showProducts(lifestyleId) {
        this.productSections.forEach((section) => {
          const sectionId = section.getAttribute('data-lifestyle-products');
          if (sectionId === lifestyleId) {
            section.classList.add('active');
          } else {
            section.classList.remove('active');
          }
        });
      }

      setActiveCard(activeCard) {
        this.cards.forEach((card) => {
          card.classList.remove('active');
        });
        activeCard.classList.add('active');
      }

      scrollToProducts() {
        if (window.innerWidth <= 768) {
          const productsWrapper = this.querySelector('.ai-lifestyle-products-wrapper-{{ ai_gen_id }}');
          if (productsWrapper) {
            const offset = 20;
            const elementPosition = productsWrapper.getBoundingClientRect().top;
            const offsetPosition = elementPosition + window.pageYOffset - offset;
            
            window.scrollTo({
              top: offsetPosition,
              behavior: 'smooth'
            });
          }
        }
      }
    }

    customElements.define('lifestyle-recommender-{{ ai_gen_id }}', LifestyleRecommender{{ ai_gen_id }});
  })();
</script>

